{
  "name": "xhr-fetch-interceptor",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "description": "A lightweight JavaScript library for intercepting and modifying XHR and Fetch requests, perfect for browser extensions and Tampermonkey scripts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "xhr",
    "fetch",
    "monkey",
    "interceptor",
    "tampermonkey"
  ],
  "dependencies": {
    "vite-plugin-monkey": "^5.0.0"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "vueIndentScriptAndStyle": false,
    "htmlWhitespaceSensitivity": "ignore"
  },
  "author": {
    "name": "rachpt",
    "url": "https://github.com/rachpt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rachpt/xhr-fetch-interceptor.git"
  },
  "bugs": {
    "url": "https://github.com/rachpt/xhr-fetch-interceptor/issues"
  },
  "homepage": "https://github.com/rachpt/xhr-fetch-interceptor#readme",
  "license": "MIT"
}
